<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.netcracker.testsystem.AnswerEntity" table="answer" schema="testsystem">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="text">
            <column name="text" sql-type="varchar(500)" length="500"/>
        </property>
        <property name="right">
            <column name="right" sql-type="int(11)"/>
        </property>
        <property name="point">
            <column name="point" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>